<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ”¹ Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back"
                app:tint="#333333"/>

            <TextView
                android:id="@+id/tvGroupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Manali Trip"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- ðŸ”¹ Scroll Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ðŸ”¥ Balance Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/purple_500">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBalanceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You owe â‚¹350"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/tvTotalGroupBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Group Balance â‚¹520"
                            android:textSize="14sp"
                            android:textColor="#EEEEEE"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- ðŸ”¹ Members Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvMemberCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Members (5)"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/btnAddMember"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_add"
                        app:tint="#7E57C2"/>
                </LinearLayout>

                <!-- ðŸ”¥ Horizontal Members Recycler -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerMembersHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="24dp"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"/>

                <!-- ðŸ”¹ Expenses Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expenses"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- ðŸ”¥ Expenses Recycler -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- ðŸ”¥ Floating Add Expense -->
    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="+ Add Expense"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="@drawable/bg_button"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"/>

</FrameLayout>
