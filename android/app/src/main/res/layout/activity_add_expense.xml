<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="100dp"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_back"
                    android:tint="#7B61FF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Expense"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:textColor="#2E2E2E"/>
            </LinearLayout>

            <!-- AMOUNT -->
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="28dp"
                android:hint="â‚¹ Enter Amount"
                android:textSize="20sp"
                android:background="@drawable/bg_input_modern"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"/>

            <!-- DESCRIPTION -->
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="18dp"
                android:hint="Description"
                android:background="@drawable/bg_input_modern"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center_vertical"/>

            <!-- PAID BY + SELECT ALL SAME ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid By"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/cbSelectAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select All"
                    android:textColor="#7B61FF"
                    android:thumbTint="#7B61FF"
                    android:trackTint="#D9D2FF"/>
            </LinearLayout>

            <!-- PAID BY CHIP CONTAINER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_chip_container"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/tvPaidByInitial"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="P"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_circle_primary"/>

                <Spinner
                    android:id="@+id/spinnerPaidBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:paddingStart="14dp"/>
            </LinearLayout>

            <!-- SPLIT TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split Between"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:textColor="#333333"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvParticipants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>

    </ScrollView>

    <!-- FIXED BOTTOM BUTTON -->
    <Button
        android:id="@+id/btnSaveExpense"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_margin="24dp"
        android:text="Save Expense"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_button_modern"/>

</FrameLayout>
