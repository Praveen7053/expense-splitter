<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="1dp"
    app:strokeColor="#EAE6FF"
    app:strokeWidth="0.6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Icon Circle -->
        <FrameLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_soft_circle">

            <ImageView
                android:id="@+id/ivExpenseIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_activity"
                android:tint="#6A5AE0"/>
        </FrameLayout>

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tvExpenseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2E1A47"/>

            <TextView
                android:id="@+id/tvExpenseMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid by Praveen â€¢ 6 members"
                android:textSize="11sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <!-- Amount Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tvExpenseAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#6A5AE0"/>

            <TextView
                android:id="@+id/tvBalanceHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="16dp"
                android:textSize="11sp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
