<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#F9F7FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Soft Icon Circle -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_soft_circle"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivExpenseIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_activity"
                android:scaleType="centerInside"/>
        </FrameLayout>

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvExpenseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#2E1A47"/>

            <TextView
                android:id="@+id/tvExpensePaidBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid by Praveen • Jul 10"
                android:textSize="13sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/tvExpenseAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹3000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6A5AE0"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
